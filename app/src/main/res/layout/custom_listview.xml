<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/rowitemList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20px">

        <RelativeLayout
            android:id="@+id/frameevent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/bttStatus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/round_button_chuadieu"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="10'"
                android:textAllCaps="false"
                android:textSize="15dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/frameevent2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Vị trí: "
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txtCreateDate"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_above="@+id/txtAddress"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Date "
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txtRoom"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text=""
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtRoom"
                android:text="SiteName" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>