<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:background="#3E80B4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Đã tìm thấy xe, và điều xe cho khách này bây giờ ? "
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:focusable="false"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/driverspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:popupBackground="#ffffff"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3E80B4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Điều xe"
            android:focusable="false"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Không"
            android:focusable="false"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="127dp"
        android:textColor="@color/color_home"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ghi chú bên dưới:" />

    <EditText
        android:id="@+id/editNote"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:background="@color/color_home"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="8"
        android:layout_gravity="center"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/bttNoteSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cập nhật ghi chú" />

</LinearLayout>